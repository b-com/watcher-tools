[agent]

#
# From watcher_metering.agent
#

# Whether it should connect to the publisher via nanoconfig or
# directly. (boolean value)
use_nanoconfig_service = {{ use_nanoconfig_service }}

# Profile name to be requested to the nanoconfig service. Should
# always take the form: nanoconfig://{PROFILE_NAME} (string value)
nanoconfig_profile = nanoconfig://watcher-metering-agent

# Nanoconfig service endpoint. By default, extracted from the
# "NN_CONFIG_SERVICE" environment variable (string value)
nanoconfig_service_endpoint = {{ nanoconfig_service_endpoint }}

# Nanoconfig update service endpoint. By default, extracted from the
# "NN_CONFIG_UPDATES" environment variable (string value)
nanoconfig_update_endpoint = {{ nanoconfig_update_endpoint }}

# Publisher endpoint. Used if the `use_nanoconfig_service` option is
# not activated (string value)
publisher_endpoint = tcp://watcher-metering-publisher.{{ watcher_services_dns }}:{{ publisher_port }}

# List of driver names the agent will dynamically spin up. (list
# value)
driver_names = {{ driver_names | join (",") }}
